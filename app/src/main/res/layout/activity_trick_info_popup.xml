<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55DFDFDF"
    tools:context=".popups.TrickInfoPopupActivity"
    android:id="@+id/trickInfoBackground">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="200dp"
        android:background="@drawable/node">

        <TextView
            android:id="@+id/trickInfoName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Tailwhip"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <TextView
            android:id="@+id/trickInfoDescription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="5dp"
            android:text="Lorem euismod phasellus nisi, commodo mollis viverra faucibus"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/trickInfoName">

        </TextView>

        <TextView
            android:id="@+id/trickInfoBelongs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Belongs to:"
            android:textSize="20sp"
            android:padding="5dp"

            app:layout_constraintTop_toBottomOf="@+id/trickInfoDescription">

        </TextView>

        <TextView
            android:id="@+id/trickInfoGroups"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="5dp"
            android:text="Beginner, Intermediate, My favourite"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/trickInfoBelongs">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>